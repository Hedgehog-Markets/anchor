{
  "compilerOptions": {
    "target": "es2019",

    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noImplicitAny": false,
    "strictNullChecks": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "rootDir": "./src",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src"]
}
